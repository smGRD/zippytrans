{
  "version": 3,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://ton-backend-sur-render-ou-autre/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
